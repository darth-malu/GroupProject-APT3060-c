<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/feeFormTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Fee Details"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#2196F3"
            android:layout_marginBottom="24dp" />

        <EditText
            android:id="@+id/studentIdInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Student ID Number"
            android:inputType="text"
            android:layout_marginBottom="12dp"
            android:padding="12dp"
            android:background="@drawable/edit_text_background" />

        <EditText
            android:id="@+id/totalFeesInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Total Fees ($)"
            android:inputType="numberDecimal"
            android:layout_marginBottom="12dp"
            android:padding="12dp"
            android:background="@drawable/edit_text_background" />

        <EditText
            android:id="@+id/feesPaidInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fees Paid ($)"
            android:inputType="numberDecimal"
            android:layout_marginBottom="12dp"
            android:padding="12dp"
            android:background="@drawable/edit_text_background" />

        <TextView
            android:id="@+id/balanceDueDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Balance Due: $0.00"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FF5722"
            android:padding="12dp"
            android:background="#FFF3E0"
            android:layout_marginBottom="12dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/clearanceDateDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Balance Clearance Date: "
            android:textSize="16sp"
            android:textColor="#757575"
            android:padding="12dp"
            android:background="#F5F5F5"
            android:layout_marginBottom="20dp"
            android:gravity="center" />

        <Button
            android:id="@+id/saveFeeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save Fee Data"
            android:textColor="#FFFFFF"
            android:background="#4CAF50"
            android:padding="12dp"
            android:minWidth="200dp" />

    </LinearLayout>
</ScrollView>
